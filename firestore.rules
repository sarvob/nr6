rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Filings collection - only authenticated admin users can read/write
    match /filings/{filingId} {
      // Allow read/write for authenticated admin users
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
      
      // Allow create for server-side operations (webhooks)
      allow create: if request.auth == null;
    }
    
    // Admins collection - only super admins can manage
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only manage through Firebase Console
    }
  }
}
